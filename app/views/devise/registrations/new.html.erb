
<div class="container d-flex justify-content-center flex-column align-items-center text-center" id="sign-up-form">
  <div class="p-3"><h2>Sign up</h2></div>


  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs p-3">
        <%= f.input :email, placeholder: "Enter your E-Mail", label: false,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password, placeholder: "Enter a password", label: false,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, placeholder: "Confirm your password", label: false,
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :first_name, placeholder: "Enter your first name", label: false,
                    required: true,
                    input_html: { autocomplete: "first-name" } %>
        <%= f.input :last_name, placeholder: "Enter your last name", label: false,
                    required: true,
                    input_html: { autocomplete: "last-name" } %>
    </div>

    <div class="form-actions my-3" id="sign-up-button">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
