<h1>Matched Recipes</h1>

<div class= "container ">
  <div class="cards col-lg-12">
  <% @recipes.each do |recipe| %>
    <div class="images card">
      <div class="card-img-top">
        <div class="recipe" data-id="<%= recipe.id %>">
          <%= image_tag(recipe.image) %>
          </div>
        <div class="card-body">
          <p><%= recipe.name %></p>
        </div>
        </div>
      </div>
  <% end %>
</div>

  <div class="btn btn-primary" id="match_button">
    <p>Match</p>
  </div>
</div>
