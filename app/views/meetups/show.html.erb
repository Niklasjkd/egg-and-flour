   <div class="card mb-3">
          <div class="row no-gutters">
            <div>
            <%= image_tag User.find_by(id: m.user_id).image, class: "card-img"%>
            </div>
            <div>
              <div class="card-body">
                <h5 class="card-title"><%= User.find_by(id: m.user_id).first_name%></h5>
                <p class="card-text">
                <% @requests.each do |request| %>
                  <%= link_to "Find out more about your match and confirm a meetup!", recipe_request_path(params[:recipe_id], request)%>
                  <%end%>
                  </p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
              </div>
            </div>
          </div>
        </div>

         <div class="cards col-lg-12">
  <% @recipes.each do |recipe| %>
    <div class="images card">
      <div class="card-img-top">
        <div class="recipe" data-id="<%= recipe.id %>">
          <%= image_tag(recipe.image) %>
          </div>
        <div class="card-body">
          <p><%= link_to "#{recipe.name}", recipe_path(recipe.id) %></p>
        </div>
        </div>
      </div>
  <% end %>
</div>

<%= render 'shared/map' %>
